    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/please_password"
            android:background="@drawable/account_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.3"
            tools:ignore="MissingConstraints">

    </EditText>
-->
    <com.organization.myapplication.utils.PasswordToggleEditText
            android:id="@+id/chat_registration_password"
            android:layout_width="match_parent"
            android:hint="@string/please_password"
            android:background="@drawable/account_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.3"
        android:singleLine="true"

        android:layout_height="wrap_content" tools:ignore="MissingConstraints">

    </com.organization.myapplication.utils.PasswordToggleEditText>
    <com.organization.myapplication.utils.PasswordToggleEditText
            android:id="@+id/chat_registration_password_ensure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/please_ensure"
            android:background="@drawable/account_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
        android:singleLine="true"

        app:layout_constraintVertical_bias="0.4">

    </com.organization.myapplication.utils.PasswordToggleEditText>
<!--
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/please_ensure"
            android:background="@drawable/account_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.4"
            tools:ignore="MissingConstraints">

    </EditText>
-->
    <Button
        android:id="@+id/chat_registration"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.6"
            android:text="@string/finish"
            android:textColor="@android:color/background_light"
            android:background="@color/colorGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

    </Button>
    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="@string/input_code"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_bias="0.5"
        android:singleLine="true"
        android:inputType="number"
        tools:ignore="MissingConstraints">

    </EditText>
    <Button
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintVertical_bias="0.5"
            android:text="@string/click_get"
            android:textColor="@android:color/background_light"
            android:background="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/forgetfragment2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.forgetfragment2.ForgetFragment2">

    <RelativeLayout
            android:id="@+id/id_forget"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints">

        <TextView
                android:text="@string/please_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="30sp">
        </TextView>
        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/holo_blue_dark"
                android:layout_marginTop="70dp">
        </View>
        <TextView
                android:id="@+id/by_psw"
                android:text="@string/by_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:drawableEnd="@drawable/forget_by"
                android:layout_marginTop="80dp">
        </TextView>
        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/holo_blue_dark"
                android:layout_marginTop="120dp">
        </View>
        <TextView
                android:drawableEnd="@drawable/forget_by"
                android:id="@+id/by_phone"
                android:text="@string/by_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="130dp">
        </TextView>
        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/holo_blue_dark"
                android:layout_marginTop="170dp">
        </View>
        <TextView
                android:id="@+id/by_protect"
                android:text="@string/by_protect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:drawableEnd="@drawable/forget_by"
                android:layout_marginTop="180dp">
        </TextView>
        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/holo_blue_dark"
                android:layout_marginTop="220dp">
        </View>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
